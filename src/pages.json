{
  "easycom": {
    "^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
  },
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "首页"
      }
    },
    {
      "path": "pages/shop/index",
      "style": {
        "navigationBarTitleText": "商铺"
      }
    },
    {
      "path": "pages/me/index",
      "style": {
        "navigationBarTitleText": "我的"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  },
  "tabBar": {
    "color": "#7A7E83",
    "selectedColor": "#3cc51f",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/index/index",
        "iconPath": "static/image/tabbar/home_gray.png",
        "selectedIconPath": "static/image/tabbar/home.png",
        "text": "首页"
      },
      {
        "pagePath": "pages/shop/index",
        "iconPath": "static/image/tabbar/setting_gray.png",
        "selectedIconPath": "static/image/tabbar/setting.png",
        "text": "商铺"
      },
      {
        "pagePath": "pages/me/index",
        "iconPath": "static/image/tabbar/my_gray.png",
        "selectedIconPath": "static/image/tabbar/my.png",
        "text": "我的"
      }
    ]
  },
  "subPackages": [
    {
      "root": "packageA",
      "pages": [
        {
          "path": "pages/index",
          "name": "packageA",
          "style": {
            "navigationBarTitleText": "packageA"
          }
        }
      ]
    },
    {
      "root": "packageB",
      "name": "packageB",
      "pages": [
        {
          "path": "pages/index",
          "style": {
            "navigationBarTitleText": "packageB"
          }
        }
      ]
    }
  ]
}
